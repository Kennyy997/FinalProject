@model List<UserViewModel>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <a asp-controller="user" asp-action="create">Add User</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                            </tr>
                        </thead>

                        <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a asp-controller="User" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                                        <a asp-controller="User" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                            @*  <form method="post" asp-action="delete">
                                            <input type="hidden" name="id" value="@item.Id"/>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                         </form> *@
                                            <button onclick="Delete(@item.Id, this)" class="btn btn-danger">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
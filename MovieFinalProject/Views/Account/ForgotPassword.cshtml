@model MovieFinalProject.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="sign section--bg" data-bg="~/assets/img/bg/section__bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="sign__content">
                    <!-- change password form -->
                    <form asp-action="ChangePassword" method="post" class="sign__form">
                        <a asp-controller="Home" asp-action="Index" class="sign__logo">
                            <img src="~/assets/img/logo.svg" alt="Logo">
                        </a>

                        <h3 class="text-white mb-3">Change Password</h3>

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="sign__group">
                            <input asp-for="CurrentPassword" class="sign__input" placeholder="Current Password" type="password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="sign__group">
                            <input asp-for="NewPassword" class="sign__input" placeholder="New Password" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="sign__group">
                            <input asp-for="ConfirmPassword" class="sign__input" placeholder="Confirm New Password" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button class="sign__btn" type="submit">Update Password</button>

                        <span class="sign__text">
                            <a asp-controller="Account" asp-action="Login">Back to Login</a>
                        </span>
                    </form>
                    <!-- end change password form -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
